{
    "name": "ajiho/composer-build-boilerplate",
    "description": "A simple template for building a composer package",
    "scripts": {
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update",
        "lint": "phpcs -p --standard=phpcs.xml --report-file=phpcs-report.txt",
        "fix": "phpcbf -p --standard=phpcs.xml",
        "test": "phpunit --colors"
    },
    "keywords": [
        "library",
        "git",
        "HOOK",
        "phpcs",
        "standards",
        "static analysis",
        "phpunit",
        "xunit",
        "testing",
        "dev"
    ],
    "homepage": "https://github.com/ajiho/composer-build-boilerplate",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ajiho\\ComposerBuildBoilerplate\\": "src/"
        }
    },
    "authors": [
        {
            "name": "ajiho",
            "email": "lujiahao@88.com",
            "homepage": "https://github.com/ajiho",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "topthink/framework": "^6.0",
        "ext-json": "*"
    },
    "config": {
        "process-timeout": 0
    },
    "extra": {
        "hooks": {
            "config": {
                "stop-on-failure": [
                    "commit-msg"
                ]
            },
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "composer lint"
            ],
            "commit-msg": [
                "file=`cat $1`",
                "COMMIT_REGEX='^(fixup! )*?(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test)(\\([a-z ]+\\))?: .+$'",
                "if ! grep -qE \"$COMMIT_REGEX\" \"$file\"; then",
                "  echo 'Invalid commit message, aborting... See https://www.conventionalcommits.org/en/v1.0.0/#summary' >&2",
                "  exit 1",
                "fi"
            ]
        },
        "config": {
            "composer-build-boilerplate": "config/composer-build-boilerplate.php"
        }
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "squizlabs/php_codesniffer": "^3.10"
    }
}
